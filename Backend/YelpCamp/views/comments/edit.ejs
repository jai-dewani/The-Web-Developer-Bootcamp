<% include ../partials/header %>
<div class="container">
    <div class="row">
        
        <h1 style="text-align:center; margin: 30px auto;">Edit Comment></h1>
        
        <div style="width:30%; margin: 0 auto">
            <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
                </div>
                <div class="form-group">
                    <input class="btn-primary btn-block btn btn-lg" type="submit">
                </div>
            </form>
            <a href="/campgrounds">Go back</a>
        </div>
        
    </div>
</div>



